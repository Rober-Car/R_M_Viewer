<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".ui.fragments.DetallesFragment"
    >


    <TextView
        android:id="@+id/nombre_episodio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        style="@style/textonegritaTama単oMedio2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/codigo_episodio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/codigo"
            style="@style/textonegritaTama単oMedio2"
            />

        <TextView
            android:id="@+id/fecha_emision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fecha"
            style="@style/textonegritaTama単oMedio2"/>

        <Switch
            android:id="@+id/switchVisto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vistos"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track"/>

    </LinearLayout>

    <TextView
        android:id="@+id/lista_personajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/personajes"
        style="@style/textonegritaTama単oMedio2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/personajes_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>