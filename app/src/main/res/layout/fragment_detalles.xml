<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".ui.fragments.DetallesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/nombre_episodio"
        style="@style/textonegritaTama単oMedio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        />

        <Switch
            android:id="@+id/switchVisto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vistos"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/textonegritaTama単oMedio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/codigo" />

        <TextView
            android:id="@+id/codigo_episodio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/codigo" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            style="@style/textonegritaTama単oMedio2"
            android:text="@string/fecha"/>
        <TextView
            android:id="@+id/fecha_emision"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha" />



    </LinearLayout>

    <TextView
        android:id="@+id/lista_personajes"
        style="@style/textonegritaTama単oMedio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/personajes" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/personajes_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>