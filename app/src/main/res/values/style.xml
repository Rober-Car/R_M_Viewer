<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================================================= -->
    <!-- TEXTOS -->
    <!-- ================================================= -->

    <style name="textonegritaTamañoMedio">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textonegritaTamañoMedio2">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ================================================= -->
    <!-- ICONOS DE FILTRO (ShapeableImageView) -->
    <!-- ================================================= -->

    <style name="IconoFiltroVisual">
        <!-- Fondo adaptable -->
        <item name="android:background">?attr/colorSurface</item>

        <!-- Forma redondeada -->
        <item name="shapeAppearanceOverlay">@style/RoundedImage</item>

        <!-- Borde adaptable -->
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorOutline</item>

        <!-- Ripple -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- ================================================= -->
    <!-- CARDVIEW DE EPISODIOS -->
    <!-- ================================================= -->

    <style name="CardEpisodio">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>

        <!-- Fondo y borde adaptables -->
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorOutline</item>

        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>

